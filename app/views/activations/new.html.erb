<div id="account_verification">
	<h2>Activate your account</h2>

	<div id="confirm_form">
		<% form_for @user, :url => activate_path(@user.id), :html => { :method => :post } do |form| %>
			<%= form.error_messages %>
			<br />
      <% is_email_present = !@user.email.blank? %>
			<%= render :partial => "form", :locals => { :form => form,:email_present => is_email_present }%>
		<% end %>
	</div>
</div>
