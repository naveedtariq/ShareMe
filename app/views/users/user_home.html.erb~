<% content_for :top_js do %>
  <script type="text/javascript">
    
    $(document).ready(function() {
    	$('#expand_collapse_profile').click(function(){
    		if($(this).attr('class') == 'closed')
    		{
    			$(".profile_featured_section").animate({height:780},"slow", function(){
    				$("#show_more").html('Show Less');
    			});
    		}
    		else
    		{
    			$(".profile_featured_section").animate({height:200},"slow");
    		}
    		
    		$('#expand_collapse_profile').toggleClass('closed open');
    	});
    
        $('#connect_with_facebook').click(function() {
          var left = (screen.width/2)-(900/2);
          var top = (screen.height/2)-(500/2);
          var w = window.open(this.href, 'Link Your Facebook Account', config='top='+top+', left='+left+',height=500, width=600, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
          return false;
         });
        $('#connect_with_twitter').click(function() {
          var left = (screen.width/2)-(900/2);
          var top = (screen.height/2)-(500/2);
          var w = window.open(this.href, 'Link Your Twitter Account', config='top='+top+', left='+left+',height=500, width=900, toolbar=no, menubar=no, scrollbars=yes, resizable=no,location=no, directories=no, status=no');
          return false;
         });
        $('#connect_with_linked_in').click(function() {
          var left = (screen.width/2)-(900/2);
          var top = (screen.height/2)-(500/2);
          var w = window.open(this.href, 'Link Your Linked In Account', config='top='+top+', left='+left+',height=500, width=900, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
          return false;
         });
        <% unless flash.blank? %>
          var title = "";
          var text = "";
          var icon = "";
          <% if !flash[:notice] .blank? %>
            title = "Warning!";
            text = "<%= flash[:notice].to_s %>";
            icon = "warning";
          <% elsif !flash[:success].blank? %>
            title = "Success!";
            text = "<%= flash[:success].to_s %>";
            icon = "success";
          <% elsif !flash[:error].blank? %>
            title = "Error!";
            text = "<%= flash[:error].to_s %>";
            icon = "error";
          <% end %>
          $("#notif_container").notify("create", {
              title: title,
              text: text,
              icon: icon
             },
             {
              click: function(e,instance){
              instance.close();
             }
           });
        <% end %>
     });
  </script>
<% end %>
