<% content_for :top_js do %>
  <script type="text/javascript">
    $(function () {
        $('.c_links').click(function () {
            var c_id = this.id;
            $.ajax({
              type: "GET",
              url: "/show_basic_profile",
              data: {id: this.id},
              success: function(data){
                $('#basic_profile_info').html(data);
                $('.selected_link').removeClass("selected_link");
                $('#'+c_id).addClass("selected_link");
                }
              });
            return false;
          });
      <% unless flash.blank? %>
        var title = "";
        var text = "";
        var icon = "";
        <% if !flash[:notice] .blank? %>
          title = "Warning!";
          text = "<%= flash[:notice].to_s %>";
          icon = "warning";
        <% elsif !flash[:success].blank? %>
          title = "Success!";
          text = "<%= flash[:success].to_s %>";
          icon = "success";
        <% elsif !flash[:error].blank? %>
          title = "Error!";
          text = "<%= flash[:error].to_s %>";
          icon = "error";
        <% end %>
        $("#notif_container").notify("create", {
            title: title,
            text: text,
            icon: icon
           },
           {
            click: function(e,instance){
            instance.close();
           }
         });
      <% end %>
    });
  </script>
<% end %>

