<div class="profile_featured_section_full darkBg">
  <h2>All Contacts</h2>
  <% if @contacts.size > 0 %>
  <div class="scolling">
    <% @contacts.each do |ct| %>
      <% if ct.id == @contact.id %>
        <% cl = "c_links selected_link" %>
      <% else %>
        <% cl = "c_links" %>
      <% end %>
      <%= link_to image_tag(ct.associated_user.profile.picture_file_name.nil? ? "/images/all_contacts_thumb.jpg" : ct.associated_user.profile.picture.url(:contact_list_thumb)) +ct.name,contact_path(ct),:class=>cl,:id=>ct.id %>
    <% end %>
  </div>
  <% else %>
    <div style="height: 25px; font-size: 20px; text-align: center; line-height: 25px;">Currently You Have No Contacts!!!</div>
  <% end %>
	<%= link_to "Sign Out","/logout",{:id=>"contact-signout",:class=>"moreBtnPlain"} %>
</div>
<div id="basic_profile_info">
  <% unless @contact.blank? %>
    <%= render :partial => "profile_view_index", :locals=>{:contact=>@contact} %>
  <% end %>
</div>
