     });
var show_notification = function(title, text, icon){
  $("#notif_container").notify("create", {
      title: title,
      text: text,
      icon: icon
     },
     {
      click: function(e,instance){
      instance.close();
     }
   });
}
var show_no_confirmation = function() {
  hide_errors();
  $('#simple-signup').hide();
  $('#social-signup').hide();
  $('#no-activation-signup').show();
}
  </script>
