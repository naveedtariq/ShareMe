<% content_for :top_js do %>
  <%= javascript_include_tag "home_page" %>
  <%= javascript_include_tag "jquery.carousel.min" %>
  <script type="text/javascript">
    $(document).ready(function() {
        var temp = $("#confirmation_token");
        if (temp.val())
        {
          $("#confirmation_popup").trigger("click");
          $('#TB_title').hide();
        }
        // or with options (there are only 2)
        $('.digits').keyup(function (event) {
          event.preventDefault();
          $(this).next('.digits').focus();
        });
        $("#notif_container").notify({
          speed: 500,
          expires: false
        });
        var icon = "";
        <% unless flash.blank? %>
          var title = "";
          var text = "";
          var icon = "";
          <% if !flash[:notice] .blank? %>
            title = "Warning!";
            text = "<%= flash[:notice].to_s %>";
            icon = "warning";
            <% if flash[:notice].include?("logged in") || flash[:notice].include?("Sign In") %>
              $('#sign-in-btn').trigger('click');
            <% end %>
          <% elsif !flash[:success].blank? %>
            title = "Success!";
            text = "<%= flash[:success].to_s %>";
            icon = "success";
          <% elsif !flash[:error].blank? %>
            title = "Error!";
            text = "<%= flash[:error].to_s %>";
            icon = "error";
          <% end %>
          $("#notif_container").notify("create", {
              title: title,
              text: text,
              icon: icon
             },
             {
              click: function(e,instance){
              instance.close();
             }
           });
          if(text == "You need to Sign In to perform this action.")
          {
            $('#sign-in-btn').trigger('click');
          }

        <% end %>
     });
  </script>
<% end %>
