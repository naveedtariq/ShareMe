<div class="get_share_code" style="postion:relative;">

<h2> get your <span>SHARE ME</span> CODE</h2>
  <div id="simple-signup">
    <%= form_tag registration_path(resource), {:class => "theform", :id=> "signup_form", :method => :post } do |uf| %>
    <div style="padding:5px 10px;">
      <input placeholder ="Name" id="user_n" name="user[name]" type="text"  class="textField"/>
      <input placeholder="E-mail" id="user_e" name="user[email]" type="text" class="textField"/>
      <input placeholder="Password" id="user_p" name="user[password]" type="password"  class="textField"/>
      <input id="register-btn" type="button" class="blackInputBtn register" value="Register">
      <div class="loader" style="display:none; float: left; margin: 14px 0pt;"> <%= image_tag 'ajax-loader.gif' %></div>
    </div>
    <% end %>
    <ul class="connect_with_socials">
      <p>Or connect with</p>
      <li>
        <%= link_to "",user_omniauth_authorize_path(:facebook),:id=>"connect_with_facebook",:class=>"social-fb tipsy",:title=>"facebook" %>
      </li>
      <li>
        <%= link_to "",user_omniauth_authorize_path(:twitter),:id=>"connect_with_twitter",:class=>"social-twitt tipsy",:title=>"twitter" %>
      </li>
      <li>
        <%= link_to "",user_omniauth_authorize_path(:linked_in),:id=>"connect_with_linked_in",:class=>"social-linkedin tipsy",:title=>"linkedin" %>
      </li>
    </ul>
  </div>
  <div id="social-signup" style="display:none;">
    <%= form_tag '/users/update_user_for_password', :class => "theform" do %>
    <div style="padding:5px 10px;">
      <div id="socialdiv" style="border: 1px solid rgb(204, 204, 204); float: left; width: 233px; margin: 0pt 0pt 5px; background: url(&quot;../images/input_pattern_yellow.jpg&quot;) repeat scroll 0pt 0pt transparent;">
        <img class="social_image" src="" style="float: left; margin: 0pt 5px 0pt 0pt; padding: 3px;">
        <h3 class="social_name" style="font-size: 15px; display: block; line-height: 45px;"></h3>
      </div>
      <input placeholder="E-mail" id="s_user_e" name="user[email]" type="text" class="textField"/>
      <input placeholder="Password" id="user_p" name="user[password]" type="password"  class="textField"/>
      <input onclick="show_simple_form();" id="cancel-btn" type="button" class="blackInputBtn register" value="Cancel">
      <input id="social-register-btn" type="button" class="blackInputBtn register" value="Register">
      <div class="loader" style="display:none; float: left; margin: 14px 0pt;"> <%= image_tag 'ajax-loader.gif' %></div>
    </div>
    <% end %>
  </div>
  <div id="success-signup" style="display:none;">
    <p style="margin:10px;font-weight:bold;">
      Congratulations! The way you communicate just got upgraded.<br /> A simple 4 digit ShareMe is all you will ever need, check your email now.
    </p>
    <input onclick="goto_simple_form();" id="cancel-btn" type="button" class="blackInputBtn register" value="Back">
  </div>
  <div id="no-activation-signup" style="display:none;">
    <p style="margin:10px;font-weight:bold;">
      You have already registered, You need to confirm your account before proceeding.
    </p>
    <input onclick="goto_simple_form();" id="cancel-btn" type="button" class="blackInputBtn register" value="Back">
  </div>
</div>
