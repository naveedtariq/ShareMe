  <script type="text/javascript">
    $(document).ready(function() {
      $('#connect_with_facebook').click(function() {
        var left = (screen.width/2)-(900/2);
        var top = (screen.height/2)-(500/2);
        var w = window.open(this.href, 'Link Your Facebook Account', config='top='+top+', left='+left+',height=500, width=900, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
        return false;
       });
      $('#connect_with_twitter').click(function() {
        var left = (screen.width/2)-(600/2);
        var top = (screen.height/2)-(300/2);
        var w = window.open(this.href, 'Link Your Twitter Account', config='top='+top+', left='+left+',height=500, width=600, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
        return false;
       });
      $('#connect_with_linked_in').click(function() {
        var left = (screen.width/2)-(600/2);
        var top = (screen.height/2)-(300/2);
        var w = window.open(this.href, 'Link Your Linked In Account', config='top='+top+', left='+left+',height=500, width=600, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
        return false;
       });
        // or with options (there are only 2)
        $('.digits').keyup(function (e) {
        	var k;
        	
		  	if (!e.charCode) 	k = String.fromCharCode(e.which);
		  	else 				k = String.fromCharCode(e.charCode);
		  							
			if( k == 'V' && e.ctrlKey)
			{
				if(this.id == 'form_field_1')
				{
					$('#form_field_4').val(this.value[3]);
					$('#form_field_3').val(this.value[2]);
					$('#form_field_2').val(this.value[1]);
					$('#form_field_1').val(this.value[0]);
				}
				
				$(this).next('.digits').focus();
			}
        });
        $("#notif_container").notify({
          speed: 500,
          expires: false
        });
        var icon = "";
        <% unless flash.blank? %>
          var title = "";
          var text = "";
          var icon = "";
          <% if !flash[:notice] .blank? %>
            title = "Warning!";
            text = "<%= flash[:notice].to_s %>";
            icon = "warning";
            <% if flash[:notice].include?("logged in") || flash[:notice].include?("Sign In") %>
              $('#sign-in-btn').trigger('click');
            <% end %>
          <% elsif !flash[:success].blank? %>
            title = "Success!";
            text = "<%= flash[:success].to_s %>";
            icon = "success";
          <% elsif !flash[:error].blank? %>
            title = "Error!";
            text = "<%= flash[:error].to_s %>";
            icon = "error";
          <% end %>
//            show_notification(title,text,icon);
/*          if(text == "You need to Sign In to perform this action.")
          {
            $('#sign-in-btn').trigger('click');
          }*/

        <% end %>
     });
var show_notification = function(title, text, icon){
  $("#notif_container").notify("create", {
      title: title,
      text: text,
      icon: icon
     },
     {
      click: function(e,instance){
      instance.close();
     }
   });
}
var show_no_confirmation = function() {
  hide_errors();
  $('#simple-signup').hide();
  $('#social-signup').hide();
  $('#no-activation-signup').show();
}
  </script>
<% end %>
