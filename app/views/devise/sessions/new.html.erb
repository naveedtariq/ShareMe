<script type="text/javascript">
    $(document).ready(function() {
      $('#connect_with_fb').click(function() {
        var left = (screen.width/2)-(600/2);
        var top = (screen.height/2)-(300/2);
        var w = window.open(this.href, 'Link Your Facebook Account', config='top='+top+', left='+left+',height=500, width=600, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
        return false;
       });
      $('#connect_with_twtr').click(function() {
        var left = (screen.width/2)-(600/2);
        var top = (screen.height/2)-(300/2);
        var w = window.open(this.href, 'Link Your Twitter Account', config='top='+top+', left='+left+',height=500, width=600, toolbar=no, menubar=no, scrollbars=no, resizable=no,location=no, directories=no, status=no');
        return false;
       });
      });
</script>
<div class="get_share_code_signin_popup">
  <h2> Sign in to <span>SHARE ME</span></h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div id="error-explanation"></div>
    <br />

    <label>Email:</label>
    <%= f.email_field :email ,:class=>"textField", :id=>"signin-e" %>
    <label>Password:</label>
    <%= f.password_field :password, :class=>"textField", :id=>"signin-n"%>
    <input type="button" onclick="tb_remove()" value="Cancel" class="blackInputBtnCancel"/>
    <input id="sign-in" type="submit" value="Sign in"  class="blackInputBtn" onclick="javascript:signIn();return false;"/>
  <% end %>

  <div style="padding-left:35px;">
    <ul class="connect_with_socials">
      <p>Or connect with</p>
      <li>
        <%= link_to "",user_omniauth_authorize_path(:facebook),:id=>"connect_with_fb",:class=>"social-fb tipsy",:title=>"facebook" %>
      </li>
      <li>
        <%= link_to "",user_omniauth_authorize_path(:twitter),:id=>"connect_with_twtr",:class=>"social-twitt tipsy",:title=>"twitter" %>
      </li>
      <li>
        <a class="social-linkedin tipsy" href="#" title="LinkedIn" onclick="social_connect('linked_in');return false;"></a>
        <input type="radio" value="linked_in" name="oauth_provider" id="oauth_provider_linked_in" style="display: none;">
      </li>
    </ul>
    <%# end %>
  </div>
</div>
